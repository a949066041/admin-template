{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
